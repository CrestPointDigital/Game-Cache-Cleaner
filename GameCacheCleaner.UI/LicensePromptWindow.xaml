<Window x:Class="GameCacheCleaner.UI.LicensePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter License" Height="180" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Paste your license token:" Margin="0,0,0,8"/>
        <TextBox Name="LicenseTokenBox" Grid.Row="1" MinWidth="480"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Padding="10,6" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Padding="10,6" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>

